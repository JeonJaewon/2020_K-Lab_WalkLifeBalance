<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <include
        android:id="@+id/settings_toolbar"
        layout="@layout/tool_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/setting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="54dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="Setting"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold" />


        <Switch
            android:id="@+id/soundset"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="#EBEBF3"
            android:checked="true"
            android:padding="10dp"
            android:switchMinWidth="80sp"
            android:text="Sound"
            android:textColor="#000000"
            android:textSize="20dp"
            android:theme="@style/ToggleButton.CustomTheme"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track_selector" />


        <Switch
            android:id="@+id/vibeset"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="#EBEBF3"
            android:checked="true"
            android:padding="10dp"
            android:switchMinWidth="80sp"
            android:text="Vibration"
            android:textColor="#000000"
            android:textSize="20dp"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track_selector" />


        <Switch
            android:id="@+id/pushset"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="#EBEBF3"
            android:checked="true"
            android:padding="10dp"
            android:switchMinWidth="80sp"
            android:text="Notification"
            android:textColor="#000000"
            android:textSize="20dp"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track_selector" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#EBEBF3"
            android:orientation="vertical">

            <Switch
                android:id="@+id/smsset"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:checked="true"
                android:padding="10dp"
                android:switchMinWidth="80sp"
                android:text="Send text on falls"
                android:textColor="#000000"
                android:textSize="20dp"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track_selector" />

            <EditText
                android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="Please enter phone number"
                android:padding="10dp"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>


